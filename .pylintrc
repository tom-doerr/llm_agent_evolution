[MASTER]
max-module-lines=100

[DESIGN]
max-cyclomatic-complexity=10  # Increased from 5 to allow slightly more complex methods

[TYPECHECK]
ignored-modules=dspy

[SIMILARITIES]
min-similarity-lines=10

[BASIC]
max-args=3
max-locals=5
max-returns=3
max-branches=5
max-statements=30
max-parents=10
max-attributes=5
max-public-methods=5

[FORMAT]
max-line-length=100

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    import-error,
    wrong-import-order,
    line-too-long,
    trailing-whitespace,
    trailing-newlines

[REPORTS]
output-format=colorized
